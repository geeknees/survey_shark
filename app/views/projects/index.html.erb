<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Projects</h1>
    <%= link_to "New Project", new_project_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
  </div>

  <% if @projects.any? %>
    <div class="bg-white shadow-sm rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Max Responses</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @projects.each do |project| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap">
                <%= link_to project.name, project, class: "text-blue-600 hover:text-blue-900 font-medium" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                  <%= case project.status
                      when 'draft' then 'bg-gray-100 text-gray-800'
                      when 'active' then 'bg-green-100 text-green-800'
                      when 'closed' then 'bg-red-100 text-red-800'
                      end %>">
                  <%= project.status.capitalize %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= project.max_responses %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                <%= link_to "Edit", edit_project_path(project), class: "text-blue-600 hover:text-blue-900" %>
                <%= link_to "Delete", project,
                    data: { "turbo-method": "delete", "turbo-confirm": "Are you sure?" },
                    class: "text-red-600 hover:text-red-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-500 text-lg mb-4">No projects yet.</p>
      <%= link_to "Create your first project", new_project_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
    </div>
  <% end %>
</div>
