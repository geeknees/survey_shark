<%= form_with(model: project, local: true, class: "space-y-6") do |form| %>
  <% if project.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <h3 class="text-sm font-medium text-red-800 mb-2">
        <%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:
      </h3>
      <ul class="text-sm text-red-700 list-disc list-inside">
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :goal, "Goal/Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :goal, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :must_ask, "Must Ask (one per line)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= text_area_tag "project[must_ask_text]", 
          (project.must_ask || []).join("\n"), 
          rows: 4, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Enter topics that must be asked about..." %>
      <p class="text-xs text-gray-500 mt-1">One topic per line</p>
    </div>

    <div>
      <%= form.label :never_ask, "Never Ask (one per line)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= text_area_tag "project[never_ask_text]", 
          (project.never_ask || []).join("\n"), 
          rows: 4, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
          placeholder: "Enter topics to avoid..." %>
      <p class="text-xs text-gray-500 mt-1">One topic per line</p>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div>
      <%= form.label :tone, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :tone, 
          options_for_select([
            ['Polite Soft', 'polite_soft'],
            ['Polite Firm', 'polite_firm'],
            ['Casual Soft', 'casual_soft'],
            ['Casual Firm', 'casual_firm']
          ], project.tone), 
          {}, 
          { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
    </div>

    <div>
      <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.select :status, 
          options_for_select([
            ['Draft', 'draft'],
            ['Active', 'active'],
            ['Closed', 'closed']
          ], project.status), 
          {}, 
          { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" } %>
    </div>

    <div>
      <%= form.label :max_responses, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.number_field :max_responses, min: 1, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
  </div>

  <div>
    <h3 class="text-sm font-medium text-gray-700 mb-3">Conversation Limits</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <%= label_tag "project[limits][max_turns]", "Max Turns", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= number_field_tag "project[limits][max_turns]", 
            project.limits&.dig('max_turns') || 12, 
            min: 1, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= label_tag "project[limits][max_deep]", "Max Deep Dives", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= number_field_tag "project[limits][max_deep]", 
            project.limits&.dig('max_deep') || 2, 
            min: 0, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>
  </div>

  <div class="flex justify-end space-x-3 pt-6">
    <%= link_to "Cancel", projects_path, class: "px-4 py-2 text-gray-700 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors" %>
    <%= form.submit class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors" %>
  </div>
<% end %>