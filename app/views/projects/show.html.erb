<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex justify-between items-start mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @project.name %></h1>
      <div class="flex items-center mt-2 space-x-4">
        <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full
          <%= case @project.status
              when 'draft' then 'bg-gray-100 text-gray-800'
              when 'active' then 'bg-green-100 text-green-800'
              when 'closed' then 'bg-red-100 text-red-800'
              end %>">
          <%= @project.status.capitalize %>
        </span>
        <span class="text-sm text-gray-600">Max responses: <%= @project.max_responses %></span>
      </div>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Insights", project_insights_path(@project), class: "bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
      <%= link_to "Edit", edit_project_path(@project), class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
      <%= link_to "Delete", @project,
          data: { "turbo-method": "delete", "turbo-confirm": "Are you sure you want to delete this project? This action cannot be undone." },
          class: "bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
      <%= link_to "Back to Projects", projects_path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-medium py-2 px-4 rounded-lg transition-colors" %>
    </div>
  </div>

  <!-- Invite Link Section -->
  <% if @project.active? %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-6 mb-8">
      <h2 class="text-lg font-semibold text-green-900 mb-4">Survey Link</h2>
      <% if @project.invite_links.any? %>
        <% invite_link = @project.invite_links.first %>
        <div class="space-y-3">
          <div data-controller="copy-button">
            <label class="block text-sm font-medium text-green-700 mb-1">Public Survey URL:</label>
            <div class="flex items-center space-x-2">
              <input type="text"
                     value="<%= invite_url(invite_link.token) %>"
                     readonly
                     class="flex-1 px-3 py-2 bg-white border border-green-300 rounded-lg text-sm"
                     onclick="this.select()"
                     data-copy-button-target="input">
              <button data-action="click->copy-button#copy"
                      data-copy-button-target="button"
                      class="bg-green-600 hover:bg-green-700 text-white px-3 py-2 rounded-lg text-sm transition-colors">
                Copy
              </button>
            </div>
          </div>
          <p class="text-sm text-green-700">
            Responses: <%= @project.responses_count %>/<%= @project.max_responses %>
          </p>
        </div>
      <% else %>
        <div class="text-center">
          <p class="text-green-700 mb-4">Generate a public link to share this survey</p>
          <%= link_to "Generate Link", generate_invite_link_project_path(@project),
              method: :post,
              class: "bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition-colors" %>
        </div>
      <% end %>
    </div>
  <% elsif @project.draft? %>
    <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-8">
      <h2 class="text-lg font-semibold text-yellow-900 mb-2">Survey Link</h2>
      <p class="text-yellow-700">Activate this project to generate a public survey link.</p>
    </div>
  <% else %>
    <div class="bg-gray-50 border border-gray-200 rounded-lg p-6 mb-8">
      <h2 class="text-lg font-semibold text-gray-900 mb-2">Survey Link</h2>
      <p class="text-gray-700">This project is closed. No new responses will be accepted.</p>
      <% if @project.invite_links.any? %>
        <p class="text-sm text-gray-600 mt-2">
          Final responses: <%= @project.responses_count %>/<%= @project.max_responses %>
        </p>
      <% end %>
    </div>
  <% end %>

  <!-- KPI Dashboard -->
  <% kpis = ProjectKpis.new(@project) %>
  <div class="bg-white shadow-sm rounded-lg p-6 mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-6">プロジェクト指標</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Total Responses -->
      <div class="text-center">
        <div class="text-3xl font-bold text-blue-600">
          <%= kpis.total_responses %>/<%= kpis.max_responses %>
        </div>
        <div class="text-sm text-gray-600 mt-1">総回答数</div>
        <div class="text-xs text-gray-500">
          残り<%= kpis.remaining_slots %>枠
        </div>
      </div>

      <!-- Strong Pain Rate -->
      <div class="text-center">
        <div class="text-3xl font-bold text-red-600">
          <%= kpis.strong_pain_rate %>%
        </div>
        <div class="text-sm text-gray-600 mt-1">強いペイン出現率</div>
        <div class="text-xs text-gray-500">
          深刻度≥4の会話比
        </div>
      </div>

      <!-- Average Turn Count -->
      <div class="text-center">
        <div class="text-3xl font-bold text-green-600">
          <%= kpis.average_turn_count %>
        </div>
        <div class="text-sm text-gray-600 mt-1">平均ターン数</div>
        <div class="text-xs text-gray-500">
          会話あたりの発言数
        </div>
      </div>
    </div>

    <!-- Progress Bar -->
    <div class="mt-6">
      <div class="flex justify-between text-sm text-gray-600 mb-2">
        <span>進捗状況</span>
        <span><%= kpis.completion_rate %>%</span>
      </div>
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-blue-500 h-2 rounded-full transition-all duration-300"
             style="width: <%= [kpis.completion_rate, 100].min %>%">
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <div class="space-y-6">
      <div class="bg-white shadow-sm rounded-lg p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Project Details</h2>

        <% if @project.goal.present? %>
          <div class="mb-4">
            <h3 class="text-sm font-medium text-gray-700 mb-2">Goal/Description</h3>
            <p class="text-gray-900"><%= simple_format(@project.goal) %></p>
          </div>
        <% end %>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <h3 class="text-sm font-medium text-gray-700 mb-1">Tone</h3>
            <p class="text-gray-900 capitalize"><%= @project.tone.humanize %></p>
          </div>
          <div>
            <h3 class="text-sm font-medium text-gray-700 mb-1">Max Responses</h3>
            <p class="text-gray-900"><%= @project.max_responses %></p>
          </div>
        </div>
      </div>

      <div class="bg-white shadow-sm rounded-lg p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Conversation Limits</h2>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <h3 class="text-sm font-medium text-gray-700 mb-1">Max Turns</h3>
            <p class="text-gray-900"><%= @project.limits&.dig('max_turns') || 12 %></p>
          </div>
          <div>
            <h3 class="text-sm font-medium text-gray-700 mb-1">Max Deep Dives</h3>
            <p class="text-gray-900"><%= @project.limits&.dig('max_deep') || 2 %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="space-y-6">
      <div class="bg-white shadow-sm rounded-lg p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Must Ask Topics</h2>
        <% if @project.must_ask.present? && @project.must_ask.any? %>
          <ul class="space-y-2">
            <% @project.must_ask.each do |topic| %>
              <li class="flex items-start">
                <span class="text-green-500 mr-2">•</span>
                <span class="text-gray-900"><%= topic %></span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-gray-500 italic">No specific topics required</p>
        <% end %>
      </div>

      <div class="bg-white shadow-sm rounded-lg p-6">
        <h2 class="text-lg font-semibold text-gray-900 mb-4">Never Ask Topics</h2>
        <% if @project.never_ask.present? && @project.never_ask.any? %>
          <ul class="space-y-2">
            <% @project.never_ask.each do |topic| %>
              <li class="flex items-start">
                <span class="text-red-500 mr-2">•</span>
                <span class="text-gray-900"><%= topic %></span>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-gray-500 italic">No topics restricted</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
