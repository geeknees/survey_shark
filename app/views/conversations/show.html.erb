<%# ABOUTME: Renders the conversation page with progress, messages, and composer. %>
<%# ABOUTME: Uses Turbo updates for live conversation progress and messages. %>
<div class="max-w-4xl mx-auto p-6">
    <div class="bg-white rounded-lg shadow-sm border">
    <!-- Progress Header -->
    <%= render "conversations/progress", conversation: @conversation %>

    <!-- Messages Container -->
    <div class="p-4">
      <%= turbo_stream_from @conversation %>
      <div data-controller="messages-refresher">
        <%= render "messages", messages: @messages %>
      </div>

      <!-- PII Warnings Container -->
      <div id="pii-warnings"></div>

      <!-- Conversation Complete Check -->
      <% if @conversation.finished_at.present? %>
        <script>
          // Redirect to thank you page after a short delay
          setTimeout(function() {
            window.location.href = '<%= project_thank_you_path(@conversation.project) %>';
          }, 2000);
        </script>

        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4 text-center">
          <div class="text-green-800 font-medium">
            会話が完了しました。ありがとうございました。
          </div>
          <div class="text-green-600 text-sm mt-1">
            まもなく完了ページに移動します...
          </div>
        </div>
      <% end %>

      <!-- Message Composer -->
      <% if @remaining_turns <= 0 && !@conversation.finished_at.present? && !@conversation.must_ask_pending? %>
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-4 text-center text-sm text-yellow-800">
          ターン数の上限に達しました
        </div>
      <% end %>
      <% unless @conversation.finished_at.present? || (@remaining_turns <= 0 && !@conversation.must_ask_pending?) %>
      <div class="border-t pt-4" data-controller="chat-composer">

        <!-- Loading indicator -->
        <div class="hidden flex items-center justify-center space-x-2 p-3 mb-3 bg-blue-50 rounded-lg"
              data-chat-composer-target="loading">
          <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-blue-600"></div>
          <span class="text-blue-600 text-sm">AIが返信を生成中… まもなく表示されます</span>
        </div>

        <%= form_with url: create_message_conversation_path(@conversation, debug: params[:debug]), method: :post,
                      local: true, class: "space-y-4",
                      data: {
                        "chat-composer-target": "form",
                        "action": "submit->chat-composer#handleSubmit"
                      } do |form| %>

          <div class="flex space-x-2">
            <%= text_area_tag :content, "",
                placeholder: "メッセージを入力してください...",
                maxlength: 500,
                class: "flex-1 border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none",
                rows: 3,
                data: { "chat-composer-target": "textarea" } %>

            <div class="flex flex-col space-y-2">
              <%= submit_tag "送信",
                  class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 disabled:opacity-50",
                  data: { "chat-composer-target": "submit", action: "click->chat-composer#submitForm" } %>

            </div>
          </div>

          <!-- Quick Replies -->
          <div class="space-y-2">
            <div class="text-sm text-gray-600">クイック返信:</div>
            <div class="flex flex-wrap gap-2">
              <button type="button"
                      class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-gray-200 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2"
                      data-action="click->chat-composer#insertQuickReply"
                      data-text="質問を言い換えて">
                質問を言い換えて
              </button>
            </div>
          </div>

          <!-- Character Counter -->
          <div class="text-xs text-gray-500 text-right">
            <span data-chat-composer-target="counter">0</span>/500
          </div>
        <% end %>

        <!-- Skip Button Form -->
        <div data-controller="skip-form" class="mt-2">
          <%= form_with url: skip_conversation_path(@conversation, debug: params[:debug]),
              data: {
                "turbo-method": :post,
                "skip-form-target": "form",
                "action": "submit->skip-form#handleSubmit"
              } do |skip_form| %>
            <%= skip_form.submit "スキップ",
                class: "bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 text-center text-sm disabled:opacity-50",
                data: { "skip-form-target": "submit" } %>
          <% end %>

          <!-- Loading indicator for skip -->
          <div class="hidden flex items-center justify-center space-x-2 p-2 bg-gray-50 rounded-lg mt-2"
               data-skip-form-target="loading">
            <div class="animate-spin rounded-full h-4 w-4 border-b-2 border-gray-600"></div>
            <span class="text-gray-600 text-sm">処理中...</span>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
