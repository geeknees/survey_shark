<div class="max-w-4xl mx-auto p-6">
    <div class="bg-white rounded-lg shadow-sm border">
      <!-- Conversation Complete Check -->
      <% if @conversation.finished_at.present? %>
        <script>
          // Redirect to thank you page after a short delay
          setTimeout(function() {
            window.location.href = '<%= project_thank_you_path(@conversation.project) %>';
          }, 2000);
        </script>

        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4 text-center">
          <div class="text-green-800 font-medium">
            会話が完了しました。ありがとうございました。
          </div>
          <div class="text-green-600 text-sm mt-1">
            まもなく完了ページに移動します...
          </div>
        </div>
      <% elsif @remaining_turns <= 0 %>
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-4 text-center">
          <div class="text-yellow-800 font-medium">
            ターン数の上限に達しました。
          </div>
          <div class="text-yellow-600 text-sm mt-1">
            インタビューを終了します。
          </div>
        </div>
      <% end %>
    <!-- Progress Header -->
    <div class="border-b p-4">
      <div class="flex justify-between items-center mb-2">
        <h2 class="text-lg font-semibold text-gray-900">インタビュー</h2>
        <div class="text-sm text-gray-600">
          残り <%= @remaining_turns %> ターン
        </div>
      </div>

      <!-- Progress Bar -->
      <div class="w-full bg-gray-200 rounded-full h-2">
        <div class="bg-blue-500 h-2 rounded-full transition-all duration-300"
             style="width: <%= (@user_turn_count.to_f / @max_turns * 100).round(1) %>%">
        </div>
      </div>
    </div>

    <!-- Messages Container -->
    <div class="p-4">
      <%= turbo_stream_from @conversation %>
      <%= render "messages", messages: @messages %>

      <!-- PII Warnings Container -->
      <div id="pii-warnings"></div>

      <!-- Conversation Complete Check -->
      <% if @conversation.finished_at.present? %>
        <script>
          // Redirect to thank you page after a short delay
          setTimeout(function() {
            window.location.href = '<%= project_thank_you_path(@conversation.project) %>';
          }, 2000);
        </script>

        <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4 text-center">
          <div class="text-green-800 font-medium">
            会話が完了しました。ありがとうございました。
          </div>
          <div class="text-green-600 text-sm mt-1">
            まもなく完了ページに移動します...
          </div>
        </div>
      <% end %>

      <!-- Message Composer -->
      <% unless @conversation.finished_at.present? || @remaining_turns <= 0 %>
      <div class="border-t pt-4" data-controller="chat-composer">
        <%= form_with url: create_message_conversation_path(@conversation), method: :post,
                      local: true, class: "space-y-4", data: { "chat-composer-target": "form" } do |form| %>

          <div class="flex space-x-2">
            <%= text_area_tag :content, "",
                placeholder: "メッセージを入力してください...",
                maxlength: 500,
                class: "flex-1 border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-transparent resize-none",
                rows: 3,
                data: { "chat-composer-target": "textarea" } %>

            <div class="flex flex-col space-y-2">
              <%= submit_tag "送信",
                  class: "bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 disabled:opacity-50",
                  data: { "chat-composer-target": "submit" } %>

            </div>
          </div>



          <!-- Quick Replies -->
          <div class="space-y-2">
            <div class="text-sm text-gray-600">クイック返信:</div>
            <div class="flex flex-wrap gap-2">
              <button type="button"
                      class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm hover:bg-gray-200 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2"
                      data-action="click->chat-composer#insertQuickReply"
                      data-text="質問を言い換えて">
                質問を言い換えて
              </button>
            </div>
          </div>

          <!-- Character Counter -->
          <div class="text-xs text-gray-500 text-right">
            <span data-chat-composer-target="counter">0</span>/500
          </div>
        <% end %>

        <!-- Skip Button Form -->
        <%= form_with url: skip_conversation_path(@conversation),
            data: { "turbo-method": :post },
            class: "mt-2" do |skip_form| %>
          <%= skip_form.submit "スキップ",
              class: "bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 text-center text-sm" %>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>