<nav class="bg-white border-b border-gray-200 fixed w-full z-30 top-0">
  <div class="px-3 py-3 lg:px-5 lg:pl-3">
    <div class="flex items-center justify-between">
      <div class="flex items-center justify-start">
        <%= link_to (authenticated? ? root_path : "#"), class: "text-xl font-bold ml-2 md:mr-24" do %>
          Survey Shark
        <% end %>
      </div>

      <% if authenticated? %>
        <!-- Desktop Navigation -->
        <div class="hidden md:flex md:items-center md:space-x-8">
          <%= link_to "Projects", projects_path,
              class: navigation_link_class(projects_path) %>

          <!-- Profile Dropdown -->
          <div class="relative ml-3">
            <div class="flex items-center space-x-4">
              <span class="text-sm text-gray-700">
                <%= current_admin&.email_address %>
              </span>
              <%= link_to "Sign out", session_path,
                  data: { "turbo-method": "delete" },
                  class: "text-gray-700 hover:text-red-600 px-3 py-2 rounded-md text-sm font-medium" %>
            </div>
          </div>
        </div>

        <!-- Mobile menu button -->
        <button type="button" class="md:hidden bg-gray-50 inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-blue-500"
                data-controller="mobile-menu"
                data-action="click->mobile-menu#toggle">
          <span class="sr-only">Open main menu</span>
          <!-- Menu icon -->
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      <% else %>
        <!-- Unauthenticated navigation -->
        <div class="hidden md:flex md:items-center md:space-x-8">
          <%= link_to "Sign in", new_session_path,
              class: "text-gray-700 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium" %>
        </div>
      <% end %>
    </div>
  </div>

  <% if authenticated? %>
    <!-- Mobile menu -->
    <div class="md:hidden hidden" data-mobile-menu-target="menu">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-gray-200">
        <%= link_to "Projects", projects_path,
            class: mobile_navigation_link_class(projects_path) %>

        <div class="pt-4 pb-3 border-t border-gray-200">
          <div class="px-3 space-y-1">
            <p class="text-sm text-gray-500">
              <%= current_admin&.email_address %>
            </p>
            <%= link_to "Sign out", session_path,
                data: { "turbo-method": "delete" },
                class: "text-gray-700 hover:text-red-600 block px-3 py-2 rounded-md text-base font-medium" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</nav>
