<div class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow">
  <div class="p-6">
    <!-- Header with rank and theme -->
    <div class="flex items-start justify-between mb-4">
      <div class="flex items-center">
        <div class="bg-blue-100 text-blue-800 text-sm font-medium px-2 py-1 rounded-full mr-3">
          #<%= rank %>
        </div>
        <h3 class="text-lg font-semibold text-gray-900">
          <%= link_to insight.theme, project_insight_path(@project, insight), 
              class: "hover:text-blue-600" %>
        </h3>
      </div>
      
      <!-- Severity indicator -->
      <div class="flex items-center">
        <span class="text-sm text-gray-500 mr-2">深刻度</span>
        <div class="flex">
          <% 5.times do |i| %>
            <svg class="h-4 w-4 <%= i < insight.severity ? 'text-red-500' : 'text-gray-300' %>" 
                 fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
        </div>
      </div>
    </div>

    <!-- JTBD -->
    <div class="mb-4">
      <h4 class="text-sm font-medium text-gray-700 mb-1">Jobs to be Done</h4>
      <p class="text-gray-900"><%= insight.jtbds %></p>
    </div>

    <!-- Frequency stats -->
    <div class="grid grid-cols-3 gap-4 mb-4">
      <div class="text-center">
        <div class="text-2xl font-bold text-blue-600"><%= insight.freq_conversations %></div>
        <div class="text-xs text-gray-500">会話</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold text-green-600"><%= insight.freq_messages %></div>
        <div class="text-xs text-gray-500">発言</div>
      </div>
      <div class="text-center">
        <div class="text-2xl font-bold text-purple-600"><%= insight.confidence_label %></div>
        <div class="text-xs text-gray-500">信頼度</div>
      </div>
    </div>

    <!-- Evidence quotes -->
    <div>
      <h4 class="text-sm font-medium text-gray-700 mb-2">代表的な発言</h4>
      <div class="space-y-2">
        <% insight.evidence.each do |quote| %>
          <blockquote class="border-l-4 border-gray-200 pl-3 py-1">
            <p class="text-sm text-gray-700 italic">"<%= quote %>"</p>
          </blockquote>
        <% end %>
      </div>
    </div>
  </div>
</div>